# .env file for Django project

# Secret key for Django's cryptographic signing
DJANGO_SECRET_KEY=your_secret_key_here

# Debug mode
DJANGO_DEBUG=True

# Allowed Hosts (Add your domain and IP addresses here)
DJANGO_ALLOWED_HOSTS=localhost, 127.0.0.1, your_domain.com

# Database configuration
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=5432

# Email configuration (for sending verification emails, etc.)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com  # or your email provider
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@example.com
EMAIL_HOST_PASSWORD=your_email_password

# File storage (optional, if you're using an external service like AWS S3)
AWS_STORAGE_BUCKET_NAME=your_bucket_name
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_REGION_NAME=us-west-2  # change to your region
AWS_S3_SIGNATURE_VERSION=s3v4

# Blockchain or custom configurations
BLOCKCHAIN_API_KEY=your_blockchain_api_key
BLOCKCHAIN_URL=your_blockchain_url

# Other custom settings
CUSTOM_SETTING_1=value_1
CUSTOM_SETTING_2=value_2

# Django static files settings (optional)
STATIC_URL=/static/
STATIC_ROOT=staticfiles

# Media files settings (if you handle file uploads)
MEDIA_URL=/media/
MEDIA_ROOT=media/

# Django Cache (optional)
CACHE_BACKEND=django.core.cache.backends.locmem.LocMemCache
